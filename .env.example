# ============================================================================
# IMAGE GENERATION BACKENDS
# At least ONE backend must be configured
# ============================================================================

# Adobe Firefly API Configuration
FIREFLY_API_KEY=your_firefly_api_key_here
FIREFLY_CLIENT_ID=your_firefly_client_id_here

# OpenAI API Configuration (DALL-E 3)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Configuration (Imagen)
GEMINI_API_KEY=your_gemini_api_key_here

# Default image generation backend
# Options: firefly, openai, dalle, gemini, imagen
DEFAULT_IMAGE_BACKEND=firefly

# ============================================================================
# TEXT PROCESSING (REQUIRED)
# ============================================================================

# Anthropic Claude API Configuration (for guideline extraction & localization)
CLAUDE_API_KEY=your_claude_api_key_here

# ============================================================================
# FEATURE FLAGS
# ============================================================================

ENABLE_CLAUDE_INTEGRATION=true
ENABLE_EXTERNAL_GUIDELINES=true
ENABLE_LOCALIZATION=true

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

MAX_CONCURRENT_REQUESTS=5
API_TIMEOUT=30
MAX_RETRIES=3

# ============================================================================
# PATHS
# ============================================================================

OUTPUT_DIR=./output
TEMP_DIR=./temp

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
